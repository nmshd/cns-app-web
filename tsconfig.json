{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "checkJs": true,
        "allowJs": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "rootDir": "./src",
        "outDir": "./webapp",
        "baseUrl": "./"
    },
    "include": ["./src/**/*", "_types/global-types.d.ts"],
    "exclude": ["src/assets/**", "./test", "node_modules/**"]
}
