{
    "compilerOptions": {
        "target": "ES2020",
        "module": "AMD",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "rootDir": "./src",
        "outDir": "./webapp",
        "baseUrl": "./"
    },
    "include": ["./src/**/*", "_types/global-types.d.ts"],
    "exclude": ["src/assets/**", "./test", "node_modules/**"]
}
