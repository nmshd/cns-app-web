{
    "name": "@nmshd/app-web",
    "version": "2.2.5",
    "description": "The web sources for the Enmeshed App",
    "repository": "github:nmshd/cns-app-web",
    "license": "MIT",
    "author": "j&s-soft GmbH",
    "files": [
        "dist"
    ],
    "scripts": {
        "lint": "npm run lint:eslint && npm run lint:prettier",
        "lint:eslint": "eslint --ext .js ./src",
        "lint:prettier": "prettier --check .",
        "start": "npm run build:ts && npm-run-all --parallel watch start:ui5",
        "start:ui5": "npx ui5 serve",
        "build": "npm run build:ts && npm run build:ui5",
        "build:ui5": "ui5 build preload --exclude-task createDebugFiles generateVersionInfo replaceCopyright replaceVersion -a",
        "build:ts": "babel src --out-dir webapp --extensions \".ts,.js\" --copy-files",
        "watch": "babel src --out-dir webapp --source-maps true --extensions \".ts,.js\" --copy-files --watch",
        "ts-typecheck": "tsc --noEmit",
        "wdi5": "cd test/e2e && wdio run wdio.conf.ts",
        "versionBump": "node ./_tools/versionBump.js && npm i",
        "test": ""
    },
    "dependencies": {
        "@js-soft/ts-utils": "2.3.1",
        "@js-soft/native-cordova": "1.2.5",
        "@js-soft/native-electron": "1.2.5",
        "@js-soft/native-web": "1.2.5",
        "@nmshd/app-runtime": "2.3.5",
        "@nmshd/runtime": "2.4.6",
        "bson": "^5.2.0",
        "pako": "^2.1.0"
    },
    "devDependencies": {
        "@js-soft/license-check": "^1.0.6",
        "@prettier/plugin-xml": "^2.2.0",
        "@babel/cli": "^7.21.5",
        "@babel/core": "^7.22.1",
        "@babel/preset-env": "^7.22.2",
        "@babel/preset-typescript": "^7.21.5",
        "@types/mocha": "^10.0.1",
        "@types/openui5": "1.114.1",
        "@ui5/cli": "^3.1.1",
        "@wdio/cli": "^8.10.5",
        "@wdio/local-runner": "^8.10.5",
        "@wdio/mocha-framework": "^8.10.4",
        "@wdio/spec-reporter": "^8.10.5",
        "babel-preset-transform-ui5": "^7.1.4",
        "chromedriver": "^113.0.0",
        "npm-run-all": "^4.1.5",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4",
        "ui5-middleware-livereload": "^0.8.2",
        "wdio-chromedriver-service": "^8.1.1",
        "wdio-ui5-service": "^1.5.0",
        "webdriverio": "^8.10.5",
        "prettier": "^2.8.8",
        "prompt": "^1.3.0",
        "express-http-proxy": "^1.6.3",
        "eslint": "^8.39.0",
        "eslint-config-prettier": "^8.8.0",
        "cross-env": "^7.0.3"
    },
    "publishConfig": {
        "access": "public"
    },
    "ui5": {
        "dependencies": [
            "ui5-middleware-livereload",
            "@nmshd/runtime",
            "@nmshd/app-runtime",
            "@js-soft/ts-utils",
            "@js-soft/native-cordova",
            "@js-soft/native-web",
            "@js-soft/native-electron"
        ]
    }
}
