<mvc:View controllerName="nmshd.app.flows.app.Privacy"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic"
	xmlns:form="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.f"
	xmlns:c="nmshd.app.core.controls">
	<semantic:DetailPage id="wizardContentPage"
		navButtonPress="onNavButtonPress"
		showNavButton="{d>/system/phone}"
		title="Datenschutzbedingungen"
		showFooter="false"
		busy="{v>/busy}"
		busyIndicatorDelay="{v>/delay}">


		<semantic:customHeaderContent>


		</semantic:customHeaderContent>

		<semantic:content>
			<f:DynamicPage class="sapUiSmallContentPadding">
				<f:title>
					<f:DynamicPageTitle>


						<f:snappedContent>
							<HBox alignItems="Center"
								justifyContent="SpaceBetween">
								<Text text="{v>/privacyVersion}" />
								<Text text="{path:'v>/privacyChanged', formatter:'.formatter.toLocaleDate'}"
									class="sapUiSmallMarginStart" />
							</HBox>
						</f:snappedContent>
						<f:expandedContent>
							<form:SimpleForm class="sapUiNoContentPadding">
								<Label text="Version" />
								<Text text="{v>/privacyVersion}" />
								<Label text="GeÃ¤ndert am" />
								<Text text="{path:'v>/privacyChanged', formatter:'.formatter.toLocaleDate'}" />
							</form:SimpleForm>

						</f:expandedContent>

						<f:actions>

						</f:actions>
					</f:DynamicPageTitle>
				</f:title>
				<f:content>
					<FormattedText htmlText="{v>/privacyText}" />

				</f:content>
			</f:DynamicPage>


		</semantic:content>
	</semantic:DetailPage>
</mvc:View>