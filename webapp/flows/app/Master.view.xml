<mvc:View controllerName="nmshd.app.flows.app.Master"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:layout="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:form="sap.ui.layout.form"
	xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<m:Page showHeader="true">
		<m:customHeader>
			<m:Bar>
				<m:contentLeft>
					<m:Button id="navButton"
						press="onNavButtonPress"
						icon="sap-icon://navigation-left-arrow" />
				</m:contentLeft>
				<m:contentMiddle>
				</m:contentMiddle>
				<m:contentRight>
				</m:contentRight>
			</m:Bar>
		</m:customHeader>
		<m:List itemPress="onItemPress"
			id="AccountNavigation">
			<m:StandardListItem title="Überblick"
				visible="{=!${d>/system/phone}}"
				icon="sap-icon://sys-help"
				type="Navigation"
				data:key="app.info" />

			<m:StandardListItem title="Über die App"
				icon="sap-icon://hint"
				type="Navigation"
				data:key="app.about" />
			<m:StandardListItem title="Datenschutz"
				icon="sap-icon://shield"
				type="Navigation"
				data:key="app.privacy" />
			<m:StandardListItem title="Rechtliche Hinweise"
				icon="sap-icon://compare"
				type="Navigation"
				data:key="app.legal" />
			<m:StandardListItem title="Impressum"
				icon="sap-icon://message-popup"
				type="Navigation"
				data:key="app.imprint" />
		</m:List>
		<m:VBox>
			<form:SimpleForm>
				<form:content>
					<m:Label text="{t>account.appinfo.appversion}" />
					<m:Text text="{v>/appVersion}"
						id="version" />

					<m:Label text="{t>account.appinfo.runtimeVersion}" />
					<m:Text text="{v>/runtimeVersion}" />
				</form:content>
			</form:SimpleForm>
		</m:VBox>

	</m:Page>
</mvc:View>