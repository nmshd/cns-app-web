<core:FragmentDefinition
    height="100%"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <m:Dialog
        showHeader="true"
        title="{t>legal.title}"
        stretch="true"
        horizontalScrolling="false"
        verticalScrolling="false"
        class="appDialog appDialogFull"
    >
    	<m:customHeader>
            <m:Bar>
                <m:contentLeft>
                    <m:Button icon="sap-icon://nav-back" text="" press="closeLegalPopup()" />
                </m:contentLeft>
                <m:contentMiddle>
                    <m:Title text="{t>legal.title}" class="sapMTitleMaxWidth" width="100%" />
                </m:contentMiddle>
            </m:Bar>
        </m:customHeader>
        <mvc:XMLView viewName="nmshd.app.flows.app.Legal" width="100%" height="100%" />
        <!--
        <m:endButton>
            <m:Button text="Close" press="closeLegalPopup()" />
        </m:endButton>
        -->
    </m:Dialog>
</core:FragmentDefinition>
