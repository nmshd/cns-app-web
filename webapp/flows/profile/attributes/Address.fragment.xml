<core:FragmentDefinition xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:controls="nmshd.app.core.controls"
	xmlns:form="sap.ui.layout.form"
	xmlns:f="sap.ui.layout.form">
	<m:Dialog id="AddressFragmentDialog"
		showHeader="true"
		stretch="true">
		<m:customHeader>
			<m:Bar>
				<m:contentLeft>
					<m:Button icon="sap-icon://decline"
						press=".onPopupClose" />
				</m:contentLeft>
				<m:contentMiddle>
					<m:Title text="Addresse hinzufÃ¼gen" />
				</m:contentMiddle>
			</m:Bar>
		</m:customHeader>
		<m:MessageStrip id="message"
			class="sapUiSmallMargin" />

		<f:Form editable="true">
			<f:layout>
				<f:ResponsiveGridLayout labelSpanXL="4"
					labelSpanL="4"
					labelSpanM="12"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="0"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="2"
					columnsL="2"
					columnsM="1"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer id="AddressFormContainer">
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
		<m:endButton>
			<m:Button text="{t>form.save}"
				enabled="{v>/submitAvailable}"
				type="Accept"
				press=".onAddressSave" />
		</m:endButton>
		<m:beginButton>
			<m:Button text="{t>form.cancel}"
				type="Reject"
				enabled="{v>/submitAvailable}"
				press=".onPopupClose" />
		</m:beginButton>
	</m:Dialog>
</core:FragmentDefinition>