<core:FragmentDefinition xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:controls="nmshd.app.core.controls"
    xmlns:form="sap.ui.layout.form"
    xmlns:f="sap.ui.layout.form"
    xmlns:attributesControl="nmshd.app.core.controls.attributes">
    <m:Dialog title="{t>attribute.newAttribute}"
        stretch="true"
        id="AllFragmentDialog">
        <form:SimpleForm editable="true">
            <m:Label text="{t>attribute}" />
            <m:Select id="allName"
                items="{
					path: '/AllAttributes',
					sorter: { path: 'text' }
				}"
                change=".allAttributesChanges">
                <core:Item key="{key}"
                    text="{text}" />
            </m:Select>
            <m:Label text="{t>attribute.value}" />
            <attributesControl:ValueRenderer id="allValue" editable="true" />
        </form:SimpleForm>

        <m:endButton>
            <m:Button text="{t>form.save}"
                enabled="{v>/submitAvailable}"
                type="Accept"
                press=".onAllSave" />
        </m:endButton>
        <m:beginButton>
            <m:Button text="{t>form.cancel}"
                type="Reject"
                enabled="{v>/submitAvailable}"
                press=".onPopupClose" />
        </m:beginButton>
    </m:Dialog>
</core:FragmentDefinition>