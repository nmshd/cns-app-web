<mvc:View controllerName="nmshd.app.flows.account.settings.Device"
	xmlns:m="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:form="sap.ui.layout.form"
	xmlns:tnt="sap.tnt"
	xmlns="sap.uxap"
	xmlns:l="sap.ui.layout"
	xmlns:controls="nmshd.app.core.controls"
	xmlns:u="sap.ui.unified">
	<semantic:DetailPage id="page"
		navButtonPress="onNavButtonPress"
		showNavButton="true"
		title="{/name}"
		showFooter="false"
		busy="{v>/busy}"
		busyIndicatorDelay="{v>/delay}">


		<semantic:customHeaderContent>

		</semantic:customHeaderContent>

		<semantic:content>

			<form:SimpleForm editable="true">
				<m:Label text="Name" />
				<m:Input editable="false"
					value="{/name}" />
				<m:Label text="Beschreibung" />
				<m:Input editable="false"
					value="{/description}" />
				<m:Label text="ID" />
				<m:Input editable="false"
					value="{/id}" />
				<m:Label text="Status" />
				<m:Input editable="false"
					value="{v>/status}" />

			</form:SimpleForm>

			<m:Panel headerText="Gerätecode"
				visible="{=!!${v>/token} }">
				<m:Text text="Bitte scanne folgenden Code auf dem neuen Gerät ab. Dieser Code ist 5 Minuten lang gültig." />
				<m:HBox justifyContent="Center"
					class="sapUiSmallMargin">
					<controls:QRCode content="{v>/token}" />

				</m:HBox>
				<m:Text text="Es ist ebenfalls möglich folgenden Link auf dem neuen Gerät zu öffnen:"
					class="sapUiSmallMarginTopBottom" />
				<m:VBox alignItems="Center">
					<m:Text text="{v>/token}"
						class="textSelectAll inlineText" />

				</m:VBox>

			</m:Panel>
		</semantic:content>
	</semantic:DetailPage>
</mvc:View>