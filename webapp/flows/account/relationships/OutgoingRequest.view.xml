<mvc:View
    controllerName="nmshd.app.flows.account.relationships.OutgoingRequest"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.m.semantic"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:form="sap.ui.layout.form"
>

	<semantic:DetailPage
        id="page"
        navButtonPress="onNavButtonPress"
        showNavButton="true"
        title="{t>newRelationship.outgoingRequestTo} {name}"
        busy="{v>/busy}"
        busyIndicatorDelay="{v>/delay}"
    >

		<semantic:content>
			<form:SimpleForm>
				<m:Label text="{t>details.shipped}" />
				<m:Text text="{path:'/date',formatter:'.formatter.toRelativeDate'}" />
				<m:Label text="{t>attribute.Thing.name}" />
				<m:Text text="{/name}" />
				<m:Label text="{t>attribute.Address}" />
				<m:Text text="{path:'/id'}" />
			</form:SimpleForm>
		</semantic:content>
		<semantic:customFooterContent>
			<m:Toolbar>
				<m:ToolbarSpacer />
			</m:Toolbar>
		</semantic:customFooterContent>
	</semantic:DetailPage>
</mvc:View>
