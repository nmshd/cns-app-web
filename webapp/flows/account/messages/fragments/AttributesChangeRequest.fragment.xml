<core:FragmentDefinition xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:controls="nmshd.app.core.controls"
    xmlns:form="sap.ui.layout.form"
    xmlns:f="sap.ui.layout.form">
    <m:CustomListItem>
        <m:VBox class="sapUiSmallMargin">
            <m:Title text="{path:'name',formatter:'.formatter.toTranslated'}" />
            <m:List items="{path:'changes',templateShareable:false}">
                <m:CustomListItem >
                    <m:VBox visible="{=!!${oldAttribute/bestMatch}}"
                        class="sapUiTinyMarginBottom">
                        <m:Text text="Ein bestehendes Attribut wird überschrieben:" />
                        <m:Text text="Der alte Wert '{oldAttribute/bestMatch/value}' des bestehendes Attribut '{newAttribute/name}' wird auf '{newAttribute/value}' gesetzt." />
                    </m:VBox>
                    <m:VBox visible="{=!${oldAttribute/bestMatch}}"
                        class="sapUiTinyMarginBottom">
                        <m:Text text="Ein neues Attribut '{newAttribute/name}' wird mit dem Wert '{newAttribute/value}' eingetragen." />
                    </m:VBox>
                </m:CustomListItem>
            </m:List>
            <m:HBox justifyContent="End"
                class="sapUiTinyMarginTop">
                <m:Button text="Daten ändern"
                    icon="sap-icon://save"
                    enabled="{=!${processed}}"
                    type="Accept"
                    press=".acceptRequest" />
            </m:HBox>
        </m:VBox>
    </m:CustomListItem>
</core:FragmentDefinition>