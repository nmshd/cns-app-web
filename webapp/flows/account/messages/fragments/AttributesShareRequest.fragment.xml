<core:FragmentDefinition
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:controls="nmshd.app.core.controls"
    xmlns:form="sap.ui.layout.form"
    xmlns:f="sap.ui.layout.form"
>
    <m:CustomListItem>
        <m:VBox class="sapUiSmallMargin">
            <m:Title text="{path:'name',formatter:'.formatter.toTranslated'}" />
            <m:Label text="{t>messages.attributeShare.attributes}" />
            <m:List items="{path:'attributes',templateShareable:false}">
                <m:StandardListItem
                    title="{bestMatch/value}"
                    description="{bestMatch/name}"
                    visible="{=!!${bestMatch}}"
                />
            </m:List>
            <m:Label text="{t>messages.attributeShare.recipient}" />
            <m:List items="{path:'recipients',templateShareable:false}">
                <controls:PersonItemRenderer title="{name}" status="{description}" showNavArrow="false">
                    <controls:avatar>
                        <m:Avatar initials="{initials}" src="{image}" />
                    </controls:avatar>
                </controls:PersonItemRenderer>
            </m:List>
            <m:HBox justifyContent="End" class="sapUiTinyMarginTop">
                <m:Button
                    text="{t>messages.attributeShare.button}"
                    icon="sap-icon://paper-plane"
                    enabled="{=!${processed}}"
                    type="Accept"
                    press=".acceptRequest"
                />
            </m:HBox>
        </m:VBox>
    </m:CustomListItem>
</core:FragmentDefinition>
