<mvc:View
    controllerName="nmshd.app.flows.account.relationship.AttributesSent"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.m.semantic"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:form="sap.ui.layout.form"
>

	<semantic:DetailPage
        id="page"
        navButtonPress="onNavButtonPress"
        showNavButton="{d>/system/phone}"
        title="{t>relationship.transmitted.attributes} {dvo>/name}"
        showFooter="false"
        busy="{v>/busy}"
        busyIndicatorDelay="{v>/delay}"
    >


		<semantic:customHeaderContent>

		</semantic:customHeaderContent>

		<semantic:content>

			<m:List id="sentList" headerText="{t>relationship.sentData}" items="{/items}">
				<m:items>
					<m:StandardListItem
                        title="{path:'id', formatter:'.formatter.value'}"
                        description="{path:'value/@type', formatter:'.formatter.attributeName'} = {path:'value/value', formatter:'.formatter.attributeName'}"
                    />
				</m:items>

			</m:List>

		</semantic:content>
	</semantic:DetailPage>

</mvc:View>
