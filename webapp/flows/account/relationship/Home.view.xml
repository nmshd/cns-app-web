<mvc:View controllerName="nmshd.app.flows.account.relationship.Home"
	xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:form="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:controls="nmshd.app.core.controls">

	<semantic:DetailPage id="page"
		navButtonPress="onNavButtonPress"
		showNavButton="{d>/system/phone}"
		class="{v>/theme/fontStyle}"
		title="{dvo>/name}"
		showFooter="false"
		busy="{v>/busy}"
		busyIndicatorDelay="{v>/delay}">


		<semantic:customHeaderContent>
			<m:Button text="{= ${d>/system/phone} ? '' : ${t>inbox.refresh}}"
				icon="sap-icon://refresh"
				visible="{= !${d>/system/phone}}"
				press="refresh" />
		</semantic:customHeaderContent>

		<semantic:subHeader>
		</semantic:subHeader>

		<semantic:content>

			<m:PullToRefresh id="pullToRefresh"
				refresh="refresh"
				visible="{=${d>/system/phone}}" />

			<l:VerticalLayout width="100%">
				<m:List id="messageList"
					class="messageList"
					headerText="Aktuelle Mitteilungen"
					noDataText="Keine Nachrichten mit {dvo>/name}"
					items="{path:'/items', sorter: { path: 'createdAt', group: false, descending: true}}"
					visible="{=!!${/items/0}}">
					<m:items>

						<controls:MessageRenderer type="Navigation"
							subject="{name}"
							time="{path:'createdAt',formatter:'.formatter.toRelativeDate'}"
							press="openMessage">
							<m:FormattedText htmlText="{body}"
								class="sapUiTinyMarginTopBottom" />
						</controls:MessageRenderer>
					</m:items>
				</m:List>
				<m:List visible="{d>/system/phone}">

					<m:CustomListItem type="Navigation"
						class="listBox"
						press="onNewMessage">
						<m:VBox class="sapUiSmallMarginTopBottom">
							<m:Title text="Neue Nachricht" />
							<m:Text text="Verfassen einer neuen Nachricht an {dvo>/name}." />
						</m:VBox>
					</m:CustomListItem>
					<m:CustomListItem type="Navigation"
						class="listBox"
						press="onInbox">
						<m:VBox class="sapUiSmallMarginTopBottom">
							<m:Title text="Nachrichtenliste" />
							<m:Text text="Anzeige aller Nachrichten von und an {dvo>/name}." />
						</m:VBox>
					</m:CustomListItem>
					<m:CustomListItem type="Navigation"
						class="listBox"
						press="onSent">
						<m:VBox class="sapUiSmallMarginTopBottom">
							<m:Title text="Gesendete Daten" />
							<m:Text text="Listet alle persönlichen Daten auf, die an {dvo>/name} geteilt wurden." />
						</m:VBox>
					</m:CustomListItem>
					<m:CustomListItem type="Navigation"
						class="listBox"
						press="onReceived">
						<m:VBox class="sapUiSmallMarginTopBottom">
							<m:Title text="Empfangene Daten" />
							<m:Text text="Von {dvo>/name} empfangene Daten können hier eingesehen werden." />
						</m:VBox>
					</m:CustomListItem>
				</m:List>
			</l:VerticalLayout>

		</semantic:content>
	</semantic:DetailPage>

</mvc:View>