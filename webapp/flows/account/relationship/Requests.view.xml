<mvc:View controllerName="nmshd.app.flows.account.relationship.Requests"
	xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:form="sap.ui.layout.form">

	<semantic:DetailPage id="page"
		navButtonPress="onNavButtonPress"
		showNavButton="{d>/system/phone}"
		title="{t>relationship.requests} {dvo>/name}"
		showFooter="false"
		busy="{v>/busy}"
		busyIndicatorDelay="{v>/delay}">


		<semantic:customHeaderContent>

		</semantic:customHeaderContent>

		<semantic:content>

			<m:List id="requestsList"
				headerText="{t>relationship.requests}"
				items="{/items}"
				itemPress="onItemPress">
				<m:items>
					<m:StandardListItem title="{path:'name', formatter:'.formatter.toTranslated'}"
						description="{path:'statusText', formatter:'.formatter.toTranslated'}"
						type="Navigation" />
				</m:items>

			</m:List>

		</semantic:content>
	</semantic:DetailPage>

</mvc:View>