<mvc:View
    controllerName="nmshd.app.flows.accounts.OnboardOverview"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.m.semantic"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:controls="nmshd.app.core.controls"
>
	<semantic:DetailPage
        id="wizardContentPage"
        navButtonPress="onNavButtonPress"
        showNavButton="{d>/system/phone}"
        title="{t>accounts.create.title}"
        showFooter="false"
        busy="{v>/busy}"
        busyIndicatorDelay="{v>/delay}"
    >


		<semantic:customHeaderContent>

		</semantic:customHeaderContent>

		<semantic:subHeader>


		</semantic:subHeader>

		<semantic:content>
			<m:VBox class="sapUiResponsiveMargin">
				<m:HBox class="contentInfo sapUiMediumMarginTopBottom">
					<m:Avatar src="sap-icon://hint" backgroundColor="Accent10" class="sapUiSmallMargin" />
					<controls:Container class="sapUiTinyMargin">
						<Text text="{t>onboardOverview.doAccept}" class="inlineText" />
						<Link press="toPrivacy" text="{t>onboardOverview.privacy}" class="sapUiTinyMarginStart inlineText" />
						<Text text="{t>onboardOverview.acceptByScan}" class="inlineText" />
					</controls:Container>
				</m:HBox>

				<m:Title text="{t>onboardOverview.title}" class="sapUiSmallMargin" />

				<controls:Container class="sapUiSmallMargin">


					<m:Text text="{t>onboardOverview.text1}" class="inlineText" />
					<m:Text text="{t>onboardOverview.text2}" class="inlineText" />
					<m:Text text="{t>onboardOverview.text3}" class="inlineText" />
				</controls:Container>

				<HBox alignItems="Center" renderType="Bare" class="sapUiSmallMargin sapUiMediumMarginBottom">
					<m:Link text="{t>onboardOverview.noCode}" press="onNoCode" />
					<ToolbarSpacer />

					<m:Button text="{t>onboardOverview.scanButton}" icon="sap-icon://accept" type="Emphasized" press="scan" />

				</HBox>



			</m:VBox>
		</semantic:content>
	</semantic:DetailPage>
</mvc:View>
