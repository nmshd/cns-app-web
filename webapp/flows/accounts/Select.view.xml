<mvc:View controllerName="nmshd.app.flows.accounts.Select"
	xmlns:m="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:form="sap.ui.layout.form"
	xmlns:controls="nmshd.app.core.controls">
	<m:Page title="{t>select.title}"
		showHeader="true"
		showNavButton="false"
		navButtonPress="onNavButtonPress"
		id="selectPage">
		<m:headerContent>
			<m:Button id="hintButton"
				press="onInfo"
				icon="sap-icon://hint" />
		</m:headerContent>
		<m:subHeader>
		</m:subHeader>
		<m:List items="{/items}"
			itemPress="onItemPress"
			id="AccountsList"
			noDataText="{t>select.noDataText}">
			<m:StandardListItem title="{name}"
				icon="{v>icon}"
				type="Navigation" />
		</m:List>
		<m:VBox alignItems="Center"
			alignContent="Center"
			visible="{d>/system/phone}">
			<m:Button text="{t>select.newProfileButton}"
				id="accountsCreateAccount"
				icon="sap-icon://add"
				press="onCreate" />
		</m:VBox>
	</m:Page>
</mvc:View>