<mvc:View
    controllerName="nmshd.app.flows.accounts.OnboardNoCode"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.m.semantic"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:controls="nmshd.app.core.controls"
>
	<semantic:DetailPage
        id="wizardContentPage"
        navButtonPress="onNavButtonPress"
        showNavButton="true"
        title="{t>accounts.create.title}"
        showFooter="false"
        busy="{v>/busy}"
        busyIndicatorDelay="{v>/delay}"
    >


		<semantic:customHeaderContent>

		</semantic:customHeaderContent>

		<semantic:subHeader>


		</semantic:subHeader>

		<semantic:content>
            <m:VBox class="sapUiSmallMargin">
			    <m:Title text="{t>onboardNoCode.title}" />

                <controls:Container>
                    <m:Text text="{t>onboardNoCode.text1}" class="inlineText" />
                    <m:Text text="{t>onboardNoCode.text2}" class="inlineText" />
                    <m:Text text="{t>onboardNoCode.text3}" class="inlineText" />
			    </controls:Container>

                <m:Button text="{t>onboardNoCode.create}" icon="sap-icon://accept" type="Emphasized" press="create" enabled="{v>/submitAvailable}" />
            </m:VBox>

		</semantic:content>
	</semantic:DetailPage>
</mvc:View>
