<mvc:View controllerName="nmshd.app.flows.accounts.Create"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic"
	xmlns:form="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:controls="nmshd.app.core.controls">
	<semantic:DetailPage id="wizardContentPage"
		navButtonPress="onNavButtonPress"
		showNavButton="{d>/system/phone}"
		title="{t>accounts.create.title}"
		showFooter="false"
		busy="{v>/busy}"
		busyIndicatorDelay="{v>/delay}">


		<semantic:customHeaderContent>

		</semantic:customHeaderContent>

		<semantic:subHeader>


		</semantic:subHeader>

		<semantic:content>
			<VBox visible="{=${v>/creation}}"
				class="sapUiResponsiveMargin">
				<controls:Container class="sapUiTinyMargin">
					<Text text="Die Benutzung dieser App erfordert die Zustimmung zu unseren"
						class="inlineText" />
					<Link press="toPrivacy"
						text=" Datenschutzbedingungen"
						class="sapUiTinyMarginStart inlineText" />
					<Text text=". Indem Du auf 'Weiter' drückst, erklärst Du dich ausdrücklich und vollumfänglich mit den Bedingungen einverstanden."
						class="inlineText" />
				</controls:Container>

				<HBox alignItems="Center"
					renderType="Bare"
					class="sapUiTinyMargin">
					<ToolbarSpacer />
					<Button text="Weiter"
						icon="sap-icon://accept"
						type="Emphasized"
						press="submit" />
				</HBox>
			</VBox>
			<VBox visible="{=${v>/creationCompleted}}"
				class="sapUiResponsiveMargin">
				<controls:Container>
					<Text text="Deine digitale Identität wurde soeben auf diesem Gerät erstellt. Falls Du einen Enmeshed QR-Code besitzt, kannst Du diesen nun einscannen."
						class="sapUiTinyMargin" />
				</controls:Container>
				<HBox alignItems="Center"
					renderType="Bare"
					class="sapUiTinyMargin">
					<ToolbarSpacer />
					<Button icon="sap-icon://bar-code"
						text="Code Scannen"
						press="qrcode"
						class="sapUiTinyMargin" />
					<Button icon="sap-icon://paper-plane"
						type="Emphasized"
						text="Weiter"
						press="start"
						class="sapUiTinyMargin" />

				</HBox>
			</VBox>
		</semantic:content>
	</semantic:DetailPage>
</mvc:View>
