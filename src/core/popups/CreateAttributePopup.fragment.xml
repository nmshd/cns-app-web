<core:FragmentDefinition
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:controls="nmshd.app.core.controls"
    xmlns:form="sap.ui.layout.form"
    xmlns:f="sap.ui.layout.form"
    xmlns:attributesControl="nmshd.app.core.controls.attributes"
>
    <m:Dialog title="{t>attribute.newAttribute}" stretch="true">
        <m:MessageStrip id="info" visible="false" />
        <form:SimpleForm editable="true">
            <m:Label text="{t>attribute}" />
            <m:Select
                id="valueType"
                items="{
					path: '/AllAttributes',
					sorter: { path: 'text' }
				}"
                change=".selectedValueTypeChanged"
            >
                <core:Item key="{key}" text="{text}" />
            </m:Select>
            <m:Label text="{t>attribute.description}" />
            <m:Text id="allDescription" />
            <m:Label text="{t>attribute.value}" />
            <attributesControl:ValueRenderer id="attributeValue" editable="true" change="onValueRendererChange" />
        </form:SimpleForm>

        <m:endButton>
            <m:Button text="{t>form.save}" enabled="{v>/submitAvailable}" type="Accept" press=".createAttribute" />
        </m:endButton>
        <m:beginButton>
            <m:Button text="{t>form.cancel}" type="Reject" enabled="{v>/submitAvailable}" press=".cancelPopup" />
        </m:beginButton>
    </m:Dialog>
</core:FragmentDefinition>
