<mvc:View
    controllerName="nmshd.app.flows.app.AboutProjectBIRD"
    xmlns:m="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.m.semantic"
>

	<semantic:DetailPage
        id="page"
        navButtonPress="onNavButtonPress"
        title="{t>master.aboutProjectBIRD}"
        showFooter="false"
        busy="{v>/busy}"
        busyIndicatorDelay="{v>/delay}"
    >


		<semantic:customHeaderContent>

		</semantic:customHeaderContent>

		<semantic:content>
            <m:VBox height="100%">
                <m:VBox class="sapUiSmallMargin">
                    <m:Title text="{t>aboutProjectBIRD.title}" class="bigTitle" wrapping="true" />
                    <m:Text text="{t>aboutProjectBIRD.text1}" class="textBold sapUiTinyMarginBottom" />
                    <m:Text text="{t>aboutProjectBIRD.text2}" class="sapUiTinyMarginBottom" />
                    <m:Text text="{t>aboutProjectBIRD.text3}" class="sapUiTinyMarginBottom" />
                </m:VBox>

                <m:VBox class="sapUiSmallMargin">
                    <m:Title text="{t>aboutProjectBIRD.moreInfo}" class="bigTitle" />
                    <m:VBox>
                        <m:Link href="http://digital-campus.org" text="digital-campus.org" />
                        <m:Link
                            href="http://www.daad.de/de/der-daad/was-wir-tun/digitalisierung/digitalercampus/"
                            text="www.daad.de/de/der-daad/was-wir-tun/digitalisierung/digitalercampus/"
                        />
                    </m:VBox>
                </m:VBox>

                <m:VBox class="sapUiSmallMargin bigMarginBottom">
                    <m:Title text="{t>aboutProjectBIRD.partners}" class="bigTitle" />
                    <m:Text text="{t>aboutProjectBIRD.partnerText1}" class="sapUiTinyMarginBottom" />
                    <m:Text text="{t>aboutProjectBIRD.partnerText2}" class="sapUiTinyMarginBottom" />

                    <m:VBox class="contentBox" alignItems="Center">
                        <m:Image src="/assets/partners/bird.svg" class="logo" />
                        <m:Image src="/assets/partners/daad.svg" class="logo" />
                        <m:Image src="/assets/partners/goethe.svg" class="logo" />
                        <m:Image src="/assets/partners/thluebeck.svg" class="logo" />
                        <m:Image src="/assets/partners/gast.svg" class="logo" />
                        <m:Image src="/assets/partners/kiron.svg" class="logo" />
                        <m:Image src="/assets/partners/rwth.svg" class="logo" />
                    </m:VBox>
                </m:VBox>

            </m:VBox>
		</semantic:content>
	</semantic:DetailPage>
</mvc:View>
